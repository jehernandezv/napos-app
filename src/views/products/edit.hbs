<div class="container p-4">
    <div class="row">
        <div class="col-md-10 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/products/edit/{{product.id}}" method="POST">

                        <div class="form-group">
                            <label>Referencia del Producto</label>
                            <input type="text" name="reference" required class="form-control" value="{{product.reference}}" placeholder="Referencia" autofocus>
                        </div>

                        <div class="form-group">
                            <label>Seleccione una Categoria:</label>
                            <select class="form-control" name="category" id="sel1">
                                <option value="{{product.category}}">{{product.category}}</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label>Unidades del producto</label>
                            <input type="number" name="cant" value="{{product.cant}}" step="0.5" class="form-control" placeholder="99.99">
                        </div>

                        <div class="form-group">
                            <label>Valor Neto por (Unidad)</label>
                            <input type="number" name="value_neto" value="{{product.value_neto}}" step="0.5" class="form-control" placeholder=" Eje: $ 99.99">
                        </div>

                        <div class="form-group">
                            <label>Costo de Transporte (Unidad)</label>
                            <input type="number" name="value_tansport" value="{{product.value_tansport}}" step="0.5" class="form-control" placeholder=" Eje: $ 99.99">
                        </div>


                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description">{{product.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>